.cards-pre, .cards-next{
    margin-top: 255rpx;
    transform: translate(0, -35%);
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: rgba(0,0,0,0.3);
}
.cards-pre {
    float: left;
    margin-left: -40%;
}
.cards-next {
    float: right;
    margin-right: -40%;
}
.cards-pre::after, .cards-next::after{
    content: "<";
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
    color: white;
    background: rgba(0,0,0,0.3);
    border-radius: 50%;
    font-size: 50rpx;
    line-height: 60rpx;
}
.cards-next::after{
    content: ">";
}
